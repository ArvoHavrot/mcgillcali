---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';


const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline=""
    title="McGill's Intercollegiate Calisthenics Team"
    subtitle={`Are you ready to take on competitive calisthenics? If so, this is for you! Once you've gotten your Club Membership, you'll be able to join McGill's Intercollegiate Calisthenics Team by clicking the button at the bottom of the page. But first, make sure you know what you're getting yourself into... <a href="#requirements" class="text-blue-600 underline hover:text-blue-800">Read team requirements below</a>.`}
    
    image={{
      src: '~/assets/images/intercollegiateteamjoin.png',
    alt: 'AstroWind Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="requirements"
    title="About the Team"
    subtitle="At McGill, our team's focus is to discipline, ... and challenge our athletes to rise to the occasion. While it is important to be passionate about competing, we layout what benefits you will get and what responsibilities you will have from joining the team."
  />
  
  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: "Personalized Training Programs",
        description:
          'Certified coaches and experienced competitive calisthenics athletes will train your team subdivision and design personalized programs to guide you towards athletic excellence!',
        icon: 'tabler:clipboard',
      },
      {
        title: 'Intercollegiate Competition Participation',
        description:
          'Travel with our team to competitions within North America to face-off with other university teams.',
        icon: 'tabler:world-pin',
      },
      {
        title: 'Explore Different Team Subdivisions',
        description:
          'We compete in four subdivisions: Endurance, Weighted, Statics & Freestyle. Opportunities to train in different subdivisions by different coaches to master many calisthenics skills are available based off performance.',
        icon: 'tabler:arrows-move',
      },
      {
        title: 'Train Calisthenics in a Group',
        description:
          'Train alongside a passionate community of like-minded athletes.',
        icon: 'tabler:users-plus',
      },
      {
        title: 'Represent McGill Calisthenics as our Team Athlete',
        description:
          'Be the first students to represent calisthenics as a sport at McGill University.',
        icon: 'tabler:school',
      },
      
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Benefits Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits</h3>
    </Fragment>
  </Content>
